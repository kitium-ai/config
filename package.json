{
  "name": "@kitiumai/config",
  "version": "0.1.4",
  "private": false,
  "description": "Shared configuration presets (TypeScript, formatting, and tooling) for the KitiumAI monorepo.",
  "type": "module",
  "exports": {
    "./tsconfig.base.json": "./tsconfig.base.json",
    "./prettier.config.cjs": "./prettier.config.cjs",
    "./jest.config.base.js": {
      "import": "./jest.config.base.js",
      "require": "./jest.config.base.cjs",
      "default": "./jest.config.base.js"
    },
    "./jest.config.base.cjs": "./jest.config.base.cjs",
    "./vitest.config.base.js": "./vitest.config.base.js",
    "./playwright.config.base.js": "./playwright.config.base.js",
    "./eslint.config.base.js": "./eslint.config.base.js",
    "./eslint.config.security.js": "./eslint.config.security.js",
    "./package.template.json": "./package.template.json",
    "./packageBase.cjs": "./packageBase.cjs",
    "./commitlint.config.cjs": "./commitlint.config.cjs",
    "./lint-staged.config.cjs": "./lint-staged.config.cjs",
    "./gitleaks.toml": "./gitleaks.toml",
    "./semantic-release.config.base.cjs": "./semantic-release.config.base.cjs",
    "./typedoc.config.base.cjs": "./typedoc.config.base.cjs",
    "./storybook.main.base.cjs": "./storybook.main.base.cjs",
    "./changeset.config.base.json": "./changeset.config.base.json",
    "./editorconfig.base": "./editorconfig.base"
  },
  "files": [
    "README.md",
    "tsconfig.base.json",
    "prettier.config.cjs",
    "jest.config.base.js",
    "jest.config.base.cjs",
    "vitest.config.base.js",
    "playwright.config.base.js",
    "eslint.config.base.js",
    "eslint.config.security.js",
    "package.template.json",
    "packageBase.cjs",
    "commitlint.config.cjs",
    "lint-staged.config.cjs",
    "gitleaks.toml",
    "semantic-release.config.base.cjs",
    "typedoc.config.base.cjs",
    "storybook.main.base.cjs",
    "changeset.config.base.json",
    "editorconfig.base"
  ],
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "kitiumai",
    "config",
    "typescript",
    "prettier",
    "typescript",
    "jest",
    "vitest",
    "playwright",
    "changeset",
    "package"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kitium-ai/config.git"
  },
  "bugs": {
    "url": "https://github.com/kitium-ai/config/issues"
  },
  "homepage": "https://github.com/kitium-ai/config#readme",
  "scripts": {
    "changeset": "ensure-changeset && changeset",
    "version": "changeset version",
    "publish:set-token": "set-npm-token",
    "publish:setup": "set-npm-token",
    "publish:check": "npm whoami --registry https://registry.npmjs.org || npm login --registry https://registry.npmjs.org",
    "publish:login": "npm login --registry https://registry.npmjs.org",
    "publish:package": "pnpm run publish:check && pnpm publish --access public --no-git-checks --registry https://registry.npmjs.org",
    "publish:package:token": "pnpm run publish:setup && pnpm publish --access public --no-git-checks --registry https://registry.npmjs.org",
    "publish:package:otp": "pnpm run publish:check && pnpm publish --access public --no-git-checks --registry https://registry.npmjs.org --otp",
    "publish:dry-run": "pnpm publish --access public --no-git-checks --dry-run --registry https://registry.npmjs.org",
    "publish:dry-run:token": "pnpm run publish:setup && pnpm publish --access public --no-git-checks --dry-run --registry https://registry.npmjs.org",
    "release": "pnpm version && pnpm install --lockfile-only"
  },
  "dependencies": {
    "@commitlint/config-conventional": "^18.6.3",
    "@eslint/js": "^9.14.0",
    "@kitiumai/scripts": "^0.2.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.0",
    "@semantic-release/npm": "^11.0.1",
    "@semantic-release/release-notes-generator": "^13.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-security": "^3.0.1",
    "typescript-eslint": "^8.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1"
  }
}
